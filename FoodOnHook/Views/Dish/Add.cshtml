@model DishFormModel

@{
    ViewData["Title"] = "Add Dish";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Add Dish</h2>

        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Name" class="col-form-label">Name</label>
                    <input type="text" class="form-control" id="Name" placeholder="Dish is...">
                </div>
                <div class="form-group col-md-6">
                    <label for="Grams" class="col-form-label">Grams</label>
                    <input type="number" class="form-control" id="Grams" placeholder="The weight is...">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <div class="form-group">
                        <label for="Price" class="col-form-label">Price</label>
                        <input type="number" class="form-control" id="Price" placeholder="The Price is...">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="form-group">
                        <label for="Discount" class="col-form-label">Discount</label>
                        <input type="number" min="0" max="1" step="0.01" class="form-control" id="Price" placeholder="The Discount is...">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="IngredientsDescription" class="col-form-label">Ingredients</label>
                <textarea type="text" class="form-control" id="IngredientsDescription" rows="10" placeholder="The Price is..."></textarea>
            </div>
            <div class="form-group">
                <label for="ImageUrl" class="col-form-label">Image URL</label>
                <input type="text" class="form-control" id="ImageUrl" placeholder="Place your dish photo here">
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>

            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>
