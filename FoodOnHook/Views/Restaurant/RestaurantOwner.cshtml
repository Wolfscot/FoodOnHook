@model RestaurantOwnerFormModel

@{
    ViewBag.Title = "Restaurant Owner";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Restaurant Registration</h2>

        <form method="post" class="border border-dark">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Name" class="col-form-label font-weight-bold">Name</label>
                    <input type="text" class="form-control" id="Name" placeholder="Restaurant is called...">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Address" class="col-form-label font-weight-bold">Address</label>
                    <input type="text" class="form-control" id="Address" placeholder="The address is...">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="PhoneNumber" class="col-form-label font-weight-bold">Phone Number</label>
                    <input type="text" class="form-control" id="PhoneNumber" placeholder="The phone is...">
                </div>
            </div>
            <div class="form-group">
                <label for="ImageUrl" class="col-form-label font-weight-bold">Image URL</label>
                <input type="text" class="form-control" id="ImageUrl" placeholder="Place your restaurant photo here">
            </div>
            <div class="form-group">
                <label for="Cousine" class="col-form-label font-weight-bold">Cousine</label>
                <input type="text" class="form-control" id="Cousine" placeholder="Our style is">
            </div>


            <input class="btn btn-primary text-center" type="submit" value="Save" />
        </form>
    </div>
</div>