@model IndexViewModel

@{
    ViewData["Title"] = "Food On Hook";
}

@{
    var dishes = Model.Dishes;
    var firstDish = dishes.Any() ? dishes[0] : null;
    var secondDish = dishes.Count > 1 ? dishes[1] : null;
    var thirdDish = dishes.Count > 2 ? dishes[2] : null;
}

@if (!dishes.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Hook your Food!</h1>
        <p class="lead">No Food Offers. Wait a little bit</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Dishes" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Dish</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstDish != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstDish.ImageUrl" alt="@firstDish.Name @firstDish.Price">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Dishes" asp-action="Details" asp-route-id="@firstDish.Id">@firstDish.Restaurant  @firstDish.Name</a></h5>
                </div>
            </div>
        }
        @if (secondDish != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondDish.ImageUrl" alt="@secondDish.Name @secondDish.Price">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Dishes" asp-action="Details" asp-route-id="@secondDish.Id">@secondDish.Restaurant  @secondDish.Name</a></h5>
                </div>
            </div>
        }
        @if (thirdDish != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdDish.ImageUrl" alt="@thirdDish.Name @thirdDish.Price">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Dishes" asp-action="Details" asp-route-id="@thirdDish.Id">@thirdDish.Restaurant  @thirdDish.Name</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalDishes Dishes 
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalOrders Orders
        </h2>
    </div>
</div>