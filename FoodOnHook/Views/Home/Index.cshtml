@model IndexViewModel

@{
    ViewData["Title"] = "Food On Hook";
}



@if (!Model.Dishes.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Hook your Food!</h1>
        <p class="lead">No Food Offers. Wait a little bit</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Dishes" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Dish</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Dishes.Count; i++)
        {
            var dish = Model.Dishes[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@dish.ImageUrl" alt="@dish.Name @dish.Price">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Dishes" asp-action="Details" asp-route-id="@dish.Id">@dish.Name  @dish.Price</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalDishes Dishes 
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalOrders Orders
        </h2>
    </div>
</div>